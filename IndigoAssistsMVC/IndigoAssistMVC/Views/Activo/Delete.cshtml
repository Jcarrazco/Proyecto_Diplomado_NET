@model IndigoAssistMVC.ViewModels.ActivoViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Eliminar Activo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currencyCulture = CultureInfo.GetCultureInfo("es-MX");
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-6 text-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Eliminar Activo
                    </h1>
                    <p class="text-muted">¿Está seguro de que desea eliminar este activo?</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-11 mx-auto">
            <!-- Alerta de advertencia -->
            <div class="alert alert-danger border-start border-danger border-4 mb-4" role="alert">
                <div>
                    <h5 class="alert-heading mb-1">¡Atención!</h5>
                    <p class="mb-0">Esta acción <strong>no se puede deshacer</strong>. El activo y toda su información asociada serán eliminados permanentemente del sistema.</p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-laptop me-2"></i>
                        Activo a Eliminar - ID: @Model.IdActivo
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Información Básica -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-secondary border-bottom pb-2 mb-3">
                                Información Básica
                            </h6>
                        </div>
                        <div class="col-md-6 mb-3">
                            <dt class="text-muted">@Html.DisplayNameFor(model => model.Codigo)</dt>
                            <dd class="h5">
                                <code class="bg-light px-3 py-2 rounded">@Html.DisplayFor(model => model.Codigo)</code>
                            </dd>
                        </div>
                        <div class="col-md-6 mb-3">
                            <dt class="text-muted">@Html.DisplayNameFor(model => model.Nombre)</dt>
                            <dd class="h6 text-dark">@Html.DisplayFor(model => model.Nombre)</dd>
                        </div>
                    </div>

                    <!-- Especificaciones Técnicas -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-secondary border-bottom pb-2 mb-3">
                                Especificaciones Técnicas
                            </h6>
                        </div>
                        <div class="col-md-4 mb-3">
                            <dt class="text-muted">@Html.DisplayNameFor(model => model.Marca)</dt>
                            <dd class="fw-medium">
                                @if (!string.IsNullOrEmpty(Model.Marca))
                                {
                                    <span class="badge bg-secondary">@Html.DisplayFor(model => model.Marca)</span>
                                }
                                else
                                {
                                    <span class="text-muted">No especificada</span>
                                }
                            </dd>
                        </div>
                        <div class="col-md-4 mb-3">
                            <dt class="text-muted">@Html.DisplayNameFor(model => model.Modelo)</dt>
                            <dd class="fw-medium">
                                @if (!string.IsNullOrEmpty(Model.Modelo))
                                {
                                    @Html.DisplayFor(model => model.Modelo)
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </dd>
                        </div>
                        <div class="col-md-4 mb-3">
                            <dt class="text-muted">@Html.DisplayNameFor(model => model.Serie)</dt>
                            <dd class="fw-medium">
                                @if (!string.IsNullOrEmpty(Model.Serie))
                                {
                                    <code class="text-primary">@Html.DisplayFor(model => model.Serie)</code>
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </dd>
                        </div>
                    </div>

                    <!-- Clasificación -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-secondary border-bottom pb-2 mb-3">
                                Clasificación
                            </h6>
                        </div>
                         <div class="col-md-6 mb-3">
                             <dt class="text-muted">@Html.DisplayNameFor(model => model.IdTipoActivo)</dt>
                             <dd>
                                 <span class="badge bg-primary">@Html.DisplayFor(model => model.IdTipoActivo)</span>
                             </dd>
                         </div>
                         <div class="col-md-6 mb-3">
                             <dt class="text-muted">@Html.DisplayNameFor(model => model.IdDepartamento)</dt>
                             <dd>
                                 <span class="badge bg-success">@Html.DisplayFor(model => model.IdDepartamento)</span>
                             </dd>
                         </div>
                         <div class="col-md-6 mb-3">
                             <dt class="text-muted">@Html.DisplayNameFor(model => model.StatusNombre)</dt>
                            <dd>
                                @{
                                    string statusClass = Model.StatusNombre switch
                                    {
                                        "A" => "bg-success",
                                        "I" => "bg-secondary", 
                                        "M" => "bg-warning text-dark",
                                        _ => "bg-secondary"
                                    };
                                    string statusText = Model.StatusNombre switch
                                    {
                                        "A" => "Activo",
                                        "I" => "Inactivo",
                                        "M" => "Mantenimiento",
                                        _ => Model.StatusNombre.ToString()
                                    };
                                }
                                <span class="badge @statusClass">@statusText</span>
                            </dd>
                         </div>
                         <div class="col-md-6 mb-3">
                             <dt class="text-muted">@Html.DisplayNameFor(model => model.IdProveedor)</dt>
                             <dd>
                                 <span class="badge bg-info">@Html.DisplayFor(model => model.IdProveedor)</span>
                             </dd>
                         </div>
                    </div>

                    <!-- Asignación y Ubicación -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-secondary border-bottom pb-2 mb-3">
                                Asignación y Ubicación
                            </h6>
                        </div>
                        <div class="col-md-6 mb-3">
                            <dt class="text-muted">@Html.DisplayNameFor(model => model.PersonaAsign)</dt>
                            <dd class="fw-medium">
                                @if (!string.IsNullOrEmpty(Model.PersonaAsign))
                                {
                                    @Html.DisplayFor(model => model.PersonaAsign)
                                }
                                else
                                {
                                    <span class="text-muted">Sin asignar</span>
                                }
                            </dd>
                        </div>
                        <div class="col-md-6 mb-3">
                            <dt class="text-muted">@Html.DisplayNameFor(model => model.Ubicacion)</dt>
                            <dd class="fw-medium">
                                @if (!string.IsNullOrEmpty(Model.Ubicacion))
                                {
                                    @Html.DisplayFor(model => model.Ubicacion)
                                }
                                else
                                {
                                    <span class="text-muted">Sin ubicación definida</span>
                                }
                            </dd>
                        </div>
                    </div>

                    <!-- Información Financiera -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-secondary border-bottom pb-2 mb-3">
                                Información Financiera
                            </h6>
                        </div>
                         <div class="col-md-6 mb-3">
                             <dt class="text-muted">@Html.DisplayNameFor(model => model.CostoCompra)</dt>
                            <dd class="h6">
                                @if (Model.CostoCompra.HasValue)
                                {
                                    <span class="text-success fw-bold">@Model.CostoCompra.Value.ToString("C", currencyCulture)</span>
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </dd>
                        </div>
                         <div class="col-md-6 mb-3">
                             <dt class="text-muted">@Html.DisplayNameFor(model => model.FeAlta)</dt>
                            <dd class="fw-medium">
                                @Html.DisplayFor(model => model.FeAlta)
                            </dd>
                        </div>
                         <div class="col-md-6 mb-3">
                             <dt class="text-muted">@Html.DisplayNameFor(model => model.FeCompra)</dt>
                            <dd class="fw-medium">
                                @if (Model.FeCompra.HasValue)
                                {
                                    @Html.DisplayFor(model => model.FeCompra)
                                }
                                else
                                {
                                    <span class="text-muted">No especificada</span>
                                }
                            </dd>
                        </div>
                    </div>

                    <!-- Confirmación de eliminación -->
                    <div class="row">
                        <div class="col-12">
                            <hr class="mb-4">

                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <a asp-action="Index" class="btn btn-secondary btn-lg me-2">
                                    Cancelar
                                </a>
                                <a asp-action="Details" asp-route-id="@Model.IdActivo" class="btn btn-outline-info btn-lg me-2">
                                    Ver Detalles
                                </a>
                                <form asp-action="Delete" class="d-inline">
                                    <input type="hidden" asp-for="IdActivo" />
                                    <button type="submit" class="btn btn-danger btn-lg" id="deleteButton">
                                        Eliminar Definitivamente
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Agregar Font Awesome si no está incluido -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .btn {
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
    }
    
    .btn:hover:not(:disabled) {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }
    
    .badge {
        font-size: 0.875rem;
        padding: 0.5rem 0.75rem;
    }
    
    dt {
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }
    
    dd {
        margin-bottom: 0.75rem;
        font-size: 1rem;
    }
    
    code {
        font-size: 1rem;
        color: #6f42c1;
        padding: 0.5rem 0.75rem;
    }
    
    .display-6 {
        font-weight: 600;
    }
    
    .border-start {
        border-left-width: 4px !important;
    }
    
    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }
    
    /* Animación del botón de eliminar */
    .btn-danger:hover:not(:disabled) {
        background-color: #dc3545;
        border-color: #dc3545;
        animation: pulse 1s infinite;
    }
    
    /* Checkbox personalizado */
    .form-check-input:checked {
        background-color: #dc3545;
        border-color: #dc3545;
    }
    
    .form-check-input:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
