<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ActivosApp.Pages.BorrarActivoPage"
             Title="Borrar Activo">
    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="Borrar por Id" FontSize="22" FontAttributes="Bold" />
        <Entry x:Name="IdEntry" Placeholder="Id del activo" Keyboard="Numeric" />
        <Button x:Name="BorrarButton" Text="Borrar" Clicked="OnBorrarClicked" />
        <ActivityIndicator x:Name="LoadingIndicator" IsVisible="False" IsRunning="False" />
    </VerticalStackLayout>
</ContentPage>
