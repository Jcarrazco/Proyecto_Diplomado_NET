<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ActivosApp.Pages.ActivosVistaPage"
             Title="Activos">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Agregar" Clicked="OnAgregarClicked" />
        <ToolbarItem Text="Borrar" Clicked="OnBorrarClicked" />
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="Auto,*" Padding="12">
        <ActivityIndicator x:Name="LoadingIndicator"
                           IsVisible="False"
                           IsRunning="False"
                           HorizontalOptions="Center" />

        <CollectionView x:Name="ActivosCollection"
                        Grid.Row="1"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,6" Padding="12" Stroke="#E5E7EB" StrokeThickness="1">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding IdActivo, StringFormat='Id: {0}'}" FontAttributes="Bold" />
                            <Label Text="{Binding Codigo}" />
                            <Label Text="{Binding Nombre}" />
                            <Label Text="{Binding StatusNombre}" FontSize="12" TextColor="#6B7280" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
